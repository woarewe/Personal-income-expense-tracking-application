<div class="card manage-block">
  <div class="card-header">
    <h5> <%= category.title %></h5>
  </div>
  <p class="card-block card-block-category">
    Type: <%= raw type_category_tag(category) %>
  </p>
  <p class="card-block card-block-category">
    Transaction's count: <strong><%= category.capitals.count %></strong>
  </p>
  <div class="card-footer">
    <%= link_to 'Edit', edit_user_category_path(current_user, category), class: 'btn btn-outline-warning category-link' %>
    <%= link_to 'Delete', edit_user_category_path(current_user, category), class: 'btn btn-outline-danger category-link' %>
  </div>
</div>
