<% if @category.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@category.errors.count, 'error') %> :
      </h2>
      <ul>
        <% @category.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
    <hr>
<% end %>

<%= form_for [current_user, @category.becomes(Category)] do |f| %>
    <div class="form-group">
      <label>Category type:</label>
      <label class="form-check-label">
        <%= f.radio_button :type, 'IncomeCategory' %>
        Income
      </label>
      <label class="form-check-label">
        <%= f.radio_button :type, 'ExpenseCategory' %>
        Expense
      </label>
    </div><hr>
    <div class="form-group">
      <%= f.label :title , class: 'col-form-label'%>
      <%= f.text_field :title, class: 'form-control', placeholder: 'Enter title' %>
    </div><hr>
    <div class="form-group row">
      <div class="col-md-6">
        <%= link_to 'Cancel', root_path, class: 'btn btn-outline-info w-100' %>
      </div>
      <div class="col-md-6">
        <%= f.submit 'Submit', class: 'btn btn-outline-warning w-100' %>
      </div>
    </div>
<% end %>