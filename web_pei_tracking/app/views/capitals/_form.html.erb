<%= form_for [current_user, @capital.becomes(Capital)] do |f| %>
    <div class="form-group" hidden>
      <%= f.radio_button :type, 'Income'%>
      <%= f.radio_button :type, 'Expense'%>
    </div>
    <div class="form-group">
      <%= f.label 'Choose a category: ' %>
      <%= f.select :category_id, grouped_options_for_select(@grouped_categories) %>
    </div><hr>
    <div class="form-group">
      <%= f.label 'Date of transaction: ' %>
      <%= f.date_select :implemented_at, order: [:month, :day, :year], class: 'form-control' %>
    </div><hr>
    <div class="form-group">
      <%= f.label 'Value: ' %>
      <div class="input-group">
        <span class="input-group-addon">$</span>
        <%= f.text_field :value, class: 'form-control currency' %>
      </div>
    </div><hr>
    <div class="form-group">
      <%= f.label 'Note: ' %>
      <%= f.text_area :note, class: 'form-control'%>
    </div><hr>
    <div class="form-group row">
      <div class="col-md-6">
        <%= link_to 'Cancel', root_path, class: 'btn btn-outline-info w-100' %>
      </div>
      <div class="col-md-6">
        <%= f.submit 'Submit', class: 'btn btn-outline-warning w-100' %>
      </div>
    </div>
<% end %>

